@model ContactViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Slider Section -->
<section class="slider_section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="detail-box">
                    <h1>
                       
                        Operation & Cleaning
                    </h1>
                    <p>
                        leading Cleaning Company providing from-to-end solutions to the
                        Client in bringing their imaginations to Reality...
                    </p>
                    <a asp-controller="Contact" asp-action="Create">Contact Us</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/images/slider-img.jpg" alt="Slider Image" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Feature Section -->
<section class="feature_section">
    <div class="container">
        <div class="feature_container">
            <div class="box">
                <div class="img-box">
                    <i class="fa fa-broom" style="font-size: 36px; color: #007bff;"></i>
                </div>
                <h5 class="name">Clean</h5>
            </div>
            <div class="box active">
                <div class="img-box">
                    <i class="fa fa-road" style="font-size: 36px; color: #28a745;"></i>
                </div>
                <h5 class="name">Build</h5>
            </div>
            <div class="box">
                <div class="img-box">
                    <i class="fa fa-tools" style="font-size: 36px; color: #ffc107;"></i>
                </div>
                <h5 class="name">Support</h5>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="about_section layout_padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-6">
                <div class="detail-box">
                    <h2>About us</h2>
                    <p>
                        Basma Contracting Company is a trusted name in the cleaning industry...
                    </p>
                    <a asp-controller="Home" asp-action="About">Read More</a>
                </div>
            </div>
            <div class="col-lg-7 col-md-6">
                <div class="img-box">
                    <img src="~/images/about.jpg" alt="About Image" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Professional Section -->
<section class="professional_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/images/professional-img.jpg" alt="Professional Image" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <h2>We Provide Professional <br> Home Services.</h2>
                    <p>
                        Randomised words which don't look even slightly believable...
                    </p>
                    <a href="@Url.Action("Services", "Home")">Read More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Service Section -->
<section class="service_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Our Services</h2>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-4 mx-auto">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/cleaning.jpg" alt="Cleaning" />
                    </div>
                    <div class="detail-box">
                        <h5>Professional Cleaning</h5>
                        <p>Specialized cleaning services for showrooms, malls, and commercial spaces using high-standard procedures.</p>
                        <div class="btn-box">
                            <a href="@Url.Action("Services", "Home")">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 mx-auto">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/roadwork.jpg" alt="Road Work" />
                    </div>
                    <div class="detail-box">
                        <h5>Road & Asphalt Works</h5>
                        <p>We execute asphalt paving, road construction, and road marking with a commitment to quality and durability.</p>
                        <div class="btn-box">
                            <a href="@Url.Action("Services", "Home")">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 mx-auto">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/construction.jpg" alt="Construction Support" />
                    </div>
                    <div class="detail-box">
                        <h5>Construction & Site Setup</h5>
                        <p>Includes earthworks, temporary camp setup, materials supply, equipment rental, and fence installation.</p>
                        <div class="btn-box">
                            <a href="@Url.Action("Services", "Home")">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>Contact Us</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <form asp-controller="Contact" asp-action="Create" method="post">
                    <div>
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <textarea asp-for="Message" class="form-control message-box" placeholder="Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="d-flex">
                        <button type="submit">SEND</button>
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success mt-3">@ViewBag.Message</div>
                    }
                </form>
            </div>
            <div class="col-md-6">
                <div class="map_container">
                    <div class="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3625.023151539114!2d46.81451567597343!3d24.68219965671352!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2f0287aeb447f5%3A0xf7e19127a8a1579d!2sAl%20Rajhi%20Bank!5e0!3m2!1sen!2ssa!4v1713087719389!5m2!1sen!2ssa"
                                width="100"
                                height="400"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap"></script>
}


