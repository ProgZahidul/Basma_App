@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!-- Service section -->
<section class="service_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Our Services</h2>
        </div>
        <div class="row">

            <div class="col-lg-4 col-md-6">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/cleaning.jpg" alt="Cleaning Services" />
                    </div>
                    <div class="detail-box">
                        <h5>Professional Cleaning</h5>
                        <p>
                            Our workers specialize in cleaning car showrooms, shopping malls, and commercial spaces with top-tier hygiene practices.
                        </p>
                        <a href="@Url.Action("Services", "Home")">Read More</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/roadwork.jpg" alt="Road & Asphalt Works" />
                    </div>
                    <div class="detail-box">
                        <h5>Road & Asphalt Works</h5>
                        <p>
                            We carry out road and asphalt work, including road marking and related infrastructure development services.
                        </p>
                        <a href="@Url.Action("Services", "Home")">Read More</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/construction.jpg" alt="Construction Supplies" />
                    </div>
                    <div class="detail-box">
                        <h5>Construction & Site Setup</h5>
                        <p>
                            Earthworks, temporary site offices, camp facilities setup, construction material supply, and equipment rental solutions.
                        </p>
                        <a href="@Url.Action("Services", "Home")">Read More</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/fence.jpg" alt="Fence Installation" />
                    </div>
                    <div class="detail-box">
                        <h5>Fence Installation</h5>
                        <p>
                            Expert installation of temporary and permanent fences for commercial and construction sites to ensure safety and security.
                        </p>
                        <a href="@Url.Action("Services", "Home")">Read More</a>
                    </div>
                </div>
            </div>

        </div>

        @if (!(currentController == "Home" && currentAction == "Services"))
        {
            <div class="btn-box">
                <a href="@Url.Action("Services", "Home")">Read More</a>
            </div>
        }
    </div>
</section>
<!-- End service section -->
