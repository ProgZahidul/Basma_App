@model ContactViewModel

@{
    ViewData["Title"] = "Contact Details";
}

<h1>@ViewData["Title"]</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>@Model.Message</td>
        </tr>
    </table>
</div>

<a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>

<!-- Delete Button Form -->
<form method="post" asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('Are you sure you want to delete this contact?');">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
